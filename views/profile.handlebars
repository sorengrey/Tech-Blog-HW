<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="container">
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Write A New Post</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-desc">Entry:</label>
        <textarea class="form-input" id="post-desc" rows="6" columns="50" name="post-desc"></textarea>
      </div>
      <div class="form-group"><br>
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <div class="col-md-6">
    <h2>Recent Posts</h2>
    
    {{#each blogs as |blog| }}
    <div class="container">
      <div class="row mb-4">
        <div class="col-md-12">
          {{blog.title}} posted by {{name}}
        
          {{!-- on {{format_date blog.date_created}} --}}
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-12">
            <p>{{blog.content}}</p>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-12">
            <p>Comments</p>
        </div>
    </div>
    {{!-- {{#each blogs as |blog| }}
    <div class="row mb-4">
        <div class="col-md-12">
            <p style="color: rgb(0, 0, 0); font-size: small;">{{blog.comment.content}}</p><hr style="color: white;">
        </div>
    </div> --}}
      {{/each}}
    </div>
  </div>
</div>

<script src="./js/profile.js"></script>
