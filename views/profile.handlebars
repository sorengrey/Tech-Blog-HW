<div class="container">
  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Write A New Post</h3>

      <form class="form new-post-form">
        <div class="form-group">
          <label for="post-name">Title:</label>
          <input class="form-input" type="text" id="post-name" name="post-name" />
        </div>
        <div class="form-group">
          <label for="post-desc">Entry:</label>
          <textarea class="form-input" id="post-desc" rows="6" columns="50" name="post-desc"></textarea>
        </div>
        <div class="form-group"><br>
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>


  <div class="col-md-6">
    <h3>Recent Posts</h3>

    <!-- Loop over each object in the blog array -->
    {{#each blogs as |blog| }}
    <div class="row ps-3">
      <div class="col-sm-8 title-row">
        {{blog.title}} -- Posted by {{blog.user.name}}
        {{!-- on {{format_date blog.date_posted}} --}}
      </div>
    </div>
    <div class="row ps-3">
      <div class="col-sm-8 content-row">
        <p>{{blog.content}}</p>
      </div>
    </div>
    <div class="row ps-3">
      <div class="col-sm-8 comment-section">
        <p>Comments</p>
      </div>
    </div>
    <div class="row ps-3">
      <div class="col-sm-8">
        <p>{{blog.comment.content}}</p>
      </div>
    </div>
    {{/each}}
  </div>

  <script src="./js/profile.js"></script>